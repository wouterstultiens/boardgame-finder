# .env.example
# Copy this file to .env and fill in your actual credentials.
# .env is ignored by git, so your secrets will not be committed.

# --- Marktplaats Configuration ---
ZIP_CODE="1012AB"
DISTANCE_KM=25
MAX_LISTINGS=100
MARKTPLAATS_CATEGORY_NAME="Gezelschapsspellen | Bordspellen"

# --- LLM Provider: "azure" or "together" ---
LLM_PROVIDER="together"

# --- Together LLM Settings (if LLM_PROVIDER="together") ---
TOGETHER_API_KEY="your-together-api-key-here"
TOGETHER_LLM_MODEL="mistralai/Mixtral-8x7B-Instruct-v0.1"

# --- Azure LLM Settings (if LLM_PROVIDER="azure") ---
# SSL_CERT_FILE=/path/to/your/cert.pem
# AZURE_CLIENT_ID="your-azure-client-id"
# AZURE_TENANT_ID="your-azure-tenant-id"
# AZURE_CLIENT_SECRET="your-azure-client-secret"

# Core Services Configuration
EXTRACTION_METHOD="json"
MATCHING_METHOD="llm"

# --- BGG Data Source Configuration ---
# # Local
# BGG_REPOSITORY_TYPE="file"
# BGG_LOCAL_FILE_PATH="bgg_data/games.csv"

# Production / CI
BGG_REPOSITORY_TYPE="gcs"
BGG_GCS_BUCKET_NAME="your-bgg-data-bucket-name"
BGG_GCS_FILE_PATH="games.csv"

# --- BGG Game Filters for Website ---
BGG_MIN_RATING=0.0
BGG_MIN_WEIGHT=0.0
BGG_MAX_WEIGHT=5.0

# --- Google Cloud Configuration ---
# This is often handled by `gcloud auth application-default login` for local dev
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/service-account.json"
GCP_PROJECT_ID="your-gcp-project-id"

# --- Web Output ---
WEB_OUTPUT_DIR="docs"