<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bordspellen in de buurt ({{ zip_code }})</title>
    <style>
        :root {
            --bg-color: #1a1a1a;
            --card-bg-color: #2a2a2a;
            --text-color: #e0e0e0;
            --text-color-secondary: #a0a0a0;
            --border-color: #444;
            --link-color: #64b5f6;
            --link-hover-color: #90caf9;
            --button-bg-color: #333;
            --button-hover-bg-color: #444;
            --button-active-bg-color: #0056b3;
            --shadow-color: rgba(0,0,0,0.5);
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
            background-color: var(--bg-color);
        }

        h1 {
            text-align: center;
            color: var(--link-color);
        }

        .controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
            padding: 1rem;
            background-color: var(--card-bg-color);
            border-radius: 8px;
        }

        .filter-group, .toggle-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .controls button {
            background-color: var(--button-bg-color);
            color: var(--text-color);
            border: 1px solid var(--border-color);
            padding: 0.5rem 1rem;
            border-radius: 16px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .controls button:hover {
            background-color: var(--button-hover-bg-color);
        }

        .controls button.active {
            background-color: var(--button-active-bg-color);
            font-weight: bold;
        }

        .game-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .game-card {
            background-color: var(--card-bg-color);
            border-radius: 8px;
            box-shadow: 0 4px 8px var(--shadow-color);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            border: 1px solid var(--border-color);
        }

        .game-card.hidden {
            display: none;
        }
        
        /* Small card styles */
        .view-small .game-grid {
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        }

        .view-small .game-card img {
            height: 120px;
        }
        
        .view-small .game-title {
            font-size: 1rem;
        }

        .view-small .game-meta, .view-small .listing {
            font-size: 0.8rem;
        }

        .game-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .game-info {
            padding: 1rem;
            flex-grow: 1;
        }

        .game-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin: 0 0 0.5rem;
        }

        .game-title a {
            text-decoration: none;
            color: var(--link-color);
        }

        .game-title a:hover {
            text-decoration: underline;
            color: var(--link-hover-color);
        }

        .game-meta {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
            color: var(--text-color-secondary);
            margin-bottom: 1rem;
        }

        .game-listings {
            border-top: 1px solid var(--border-color);
            padding-top: 1rem;
        }

        .listing {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 0;
            font-size: 0.9rem;
        }

        .listing a {
            background-color: var(--button-bg-color);
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            text-decoration: none;
            color: var(--text-color);
            font-weight: 500;
        }

        .listing a:hover {
            background-color: var(--button-hover-bg-color);
        }

        footer {
            text-align: center;
            margin-top: 3rem;
            color: var(--text-color-secondary);
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <header>
        <h1>Bordspellen in de buurt ({{ zip_code }})</h1>
    </header>

    <div class="controls">
        <div class="filter-group">
            <strong>Added:</strong>
            <button data-days="0.5">12 hours</button>
            <button data-days="1">Past day</button>
            <button data-days="3">Past 3 days</button>
            <button data-days="7">Past week</button>
            <button data-days="14">Past 2 weeks</button>
            <button data-days="30">Past month</button>
        </div>
        <div class="toggle-group">
            <strong>View:</strong>
            <button id="size-toggle">Toggle Size</button>
        </div>
    </div>

    <main id="game-container" class="game-grid">
        {% for game in games %}
        <div class="game-card" data-newest-listing-date="{{ game.newest_listing_date.isoformat() }}">
            {% if game.image %}
            <img src="{{ game.image }}" alt="{{ game.name }}">
            {% endif %}
            <div class="game-info">
                <div class="game-title">
                    <a href="{{ game.bgg_link }}" target="_blank" rel="noopener noreferrer">{{ game.name }}</a>
                </div>
                <div class="game-meta">
                    <span><strong>Rating:</strong> {{ "%.2f"|format(game.rating) }}</span>
                    <span><strong>Weight:</strong> {{ "%.2f"|format(game.weight) }}</span>
                    <span><strong>Year:</strong> {{ game.year }}</span>
                </div>
                <div class="game-listings">
                    <strong>Listings:</strong>
                    {% for listing in game.listings %}
                    <div class="listing">
                        <span>â‚¬{{ "%.2f"|format(listing.price) }} in {{ listing.city }}</span>
                        <a href="{{ listing.link }}" target="_blank" rel="noopener noreferrer">View</a>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% else %}
        <p>No games found matching the criteria.</p>
        {% endfor %}
    </main>
    <footer>
        <p>Last updated: {{ now().strftime("%Y-%m-%d %H:%M:%S") }} UTC</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const timeFilterButtons = document.querySelectorAll('.filter-group button[data-days]');
            const sizeToggleButton = document.getElementById('size-toggle');
            const gameContainer = document.getElementById('game-container');
            const gameCards = document.querySelectorAll('.game-card');

            const TIME_FILTER_KEY = 'boardgamefinder_timefilter';
            const VIEW_SIZE_KEY = 'boardgamefinder_viewsize';
            const DEFAULT_TIME_FILTER = '7'; // Past week
            const DEFAULT_VIEW_SIZE = 'large';

            function applyTimeFilter(days) {
                const now = new Date();
                const cutoff = new Date(now.getTime() - (days * 24 * 60 * 60 * 1000));

                gameCards.forEach(card => {
                    const listingDateStr = card.dataset.newestListingDate;
                    if (listingDateStr) {
                        const listingDate = new Date(listingDateStr);
                        if (listingDate >= cutoff) {
                            card.classList.remove('hidden');
                        } else {
                            card.classList.add('hidden');
                        }
                    }
                });

                timeFilterButtons.forEach(button => {
                    if (button.dataset.days === days) {
                        button.classList.add('active');
                    } else {
                        button.classList.remove('active');
                    }
                });
            }

            function applyViewSize(size) {
                if (size === 'small') {
                    gameContainer.classList.add('view-small');
                } else {
                    gameContainer.classList.remove('view-small');
                }
            }

            // Event Listeners
            timeFilterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const days = button.dataset.days;
                    localStorage.setItem(TIME_FILTER_KEY, days);
                    applyTimeFilter(days);
                });
            });

            sizeToggleButton.addEventListener('click', () => {
                const isSmall = gameContainer.classList.contains('view-small');
                const newSize = isSmall ? 'large' : 'small';
                localStorage.setItem(VIEW_SIZE_KEY, newSize);
                applyViewSize(newSize);
            });
            
            // Initial Setup
            function initialize() {
                const savedTimeFilter = localStorage.getItem(TIME_FILTER_KEY) || DEFAULT_TIME_FILTER;
                const savedViewSize = localStorage.getItem(VIEW_SIZE_KEY) || DEFAULT_VIEW_SIZE;

                applyTimeFilter(savedTimeFilter);
                applyViewSize(savedViewSize);
            }

            initialize();
        });
    </script>
</body>
</html>