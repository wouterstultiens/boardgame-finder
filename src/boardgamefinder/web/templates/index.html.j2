<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bordspellen in de buurt ({{ zip_code }})</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #0D1117;
            --surface-color: #161B22;
            --border-color: #30363D;
            --text-primary: #E6EDF3;
            --text-secondary: #8B949E;
            --accent-primary: #58A6FF;
            --accent-gradient: linear-gradient(to right, #58A6FF, #A371F7);
            --shadow-color: rgba(0, 0, 0, 0.4);
            --font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        *, *::before, *::after {
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-family);
            line-height: 1.6;
            color: var(--text-primary);
            background-color: var(--bg-color);
            margin: 0;
            padding: 1.5rem;
        }

        .container {
            max-width: 1400px;
            margin: 1rem auto;
            padding: 0 1rem;
        }

        header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        header h1 {
            font-size: 2.8rem;
            font-weight: 700;
            background: var(--accent-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }
        
        header p {
            color: var(--text-secondary);
            font-size: 1.1rem;
            margin-top: 0.5rem;
        }

        .controls {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 3rem;
            padding: 1rem;
            background-color: rgba(22, 27, 34, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            border: 1px solid var(--border-color);
            position: sticky;
            top: 1rem;
            z-index: 10;
        }

        .controls strong {
            margin-right: 0.5rem;
            color: var(--text-secondary);
            font-weight: 500;
        }

        .controls button {
            background-color: transparent;
            color: var(--text-secondary);
            border: 1px solid var(--border-color);
            padding: 0.5rem 1.2rem;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }

        .controls button:hover {
            border-color: var(--accent-primary);
            color: var(--accent-primary);
        }

        .controls button.active {
            background: var(--accent-gradient);
            color: white;
            border-color: transparent;
            font-weight: 600;
        }

        .game-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
        }

        .game-card {
            background-color: var(--surface-color);
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow-color);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            border: 1px solid var(--border-color);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }
        
        .game-card.hidden { display: none; }

        .game-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 30px var(--shadow-color);
        }

        .game-card-image-wrapper {
            width: 100%;
            height: 220px;
            overflow: hidden;
        }

        .game-card-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .game-card:hover .game-card-image {
            transform: scale(1.05);
        }

        .game-card-content {
            padding: 1.25rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            border-top: 1px solid var(--border-color);
        }

        .game-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin: 0 0 0.75rem;
        }

        .game-title a {
            text-decoration: none;
            color: var(--text-primary);
            transition: color 0.2s;
        }

        .game-title a:hover {
            color: var(--accent-primary);
        }

        .game-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            font-size: 0.85rem;
            color: var(--text-secondary);
            margin-bottom: 1.25rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }
        
        .meta-item svg {
            width: 16px;
            height: 16px;
            stroke: var(--text-secondary);
        }

        .game-listings {
            margin-top: auto;
            border-top: 1px solid var(--border-color);
            padding-top: 1rem;
        }

        .game-listings h3 {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--text-secondary);
            margin: 0 0 0.75rem;
        }

        .listing-links {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .listing-links a {
            background-color: #21262D;
            border: 1px solid var(--border-color);
            padding: 0.3rem 0.8rem;
            border-radius: 6px;
            text-decoration: none;
            color: var(--text-primary);
            font-weight: 500;
            font-size: 0.85rem;
            transition: all 0.2s;
        }

        .listing-links a:hover {
            background-color: var(--border-color);
            border-color: var(--accent-primary);
            color: var(--accent-primary);
        }

        footer {
            text-align: center;
            margin-top: 4rem;
            color: var(--text-secondary);
            font-size: 0.8rem;
        }
        
        .no-games {
            color: var(--text-secondary);
            text-align: center;
            grid-column: 1 / -1;
        }

        @media (max-width: 600px) {
            body { padding: 1rem 0.5rem; }
            .container { padding: 0 0.5rem; }
            header h1 { font-size: 2rem; }
            .controls { 
                flex-direction: column;
                position: static;
            }
            .game-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Board Game Radar</h1>
            <p>Second-hand finds near {{ zip_code }}</p>
        </header>

        <div class="controls">
            <strong>Added:</strong>
            <button data-hours="12">12 hours</button>
            <button data-hours="24">1 day</button>
            <button data-hours="72">3 days</button>
            <button data-hours="168">1 week</button>
            <button data-hours="336">2 weeks</button>
            <button data-hours="720">1 month</button>
        </div>

        <main id="game-container" class="game-grid">
            {% for game in games %}
            <div class="game-card" data-newest-listing-date="{{ game.newest_listing_date.isoformat() }}">
                <div class="game-card-image-wrapper">
                    <img src="{{ game.image or 'https://via.placeholder.com/400x250/161B22/8B949E?text=No+Image' }}" alt="{{ game.name }}" class="game-card-image">
                </div>
                <div class="game-card-content">
                    <h2 class="game-title">
                        <a href="{{ game.bgg_link }}" target="_blank" rel="noopener noreferrer">{{ game.name }}</a>
                    </h2>
                    <div class="game-meta">
                        <span class="meta-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                            <strong>{{ "%.2f"|format(game.rating) }}</strong>
                        </span>
                        <span class="meta-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path></svg>
                            <strong>{{ "%.2f"|format(game.weight) }}</strong>
                        </span>
                        <span class="meta-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                            <span>{{ game.year }}</span>
                        </span>
                    </div>
                    <div class="game-listings">
                        <h3>Listings ({{ game.listings|length }})</h3>
                        <div class="listing-links">
                            {% for listing in game.listings %}
                            <a href="{{ listing.link }}" target="_blank" rel="noopener noreferrer">{{ listing.date_formatted }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <p class="no-games">No games found matching the current filters.</p>
            {% endfor %}
        </main>
        <footer>
            <p>Last updated: {{ now().strftime("%Y-%m-%d %H:%M:%S") }} UTC</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const timeFilterButtons = document.querySelectorAll('.controls button[data-hours]');
            const gameCards = document.querySelectorAll('.game-card');
            const TIME_FILTER_KEY = 'boardgamefinder_timefilter_hours';
            const DEFAULT_TIME_FILTER = '168';

            function applyTimeFilter(hours) {
                const nowUtc = new Date().getTime();
                const cutoffUtc = nowUtc - (parseFloat(hours) * 60 * 60 * 1000);
                gameCards.forEach(card => {
                    const listingDateStr = card.dataset.newestListingDate;
                    if (listingDateStr) {
                        const listingDateUtc = new Date(listingDateStr).getTime();
                        card.classList.toggle('hidden', listingDateUtc < cutoffUtc);
                    }
                });
                timeFilterButtons.forEach(button => {
                    button.classList.toggle('active', button.dataset.hours === hours);
                });
            }

            timeFilterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const hours = button.dataset.hours;
                    localStorage.setItem(TIME_FILTER_KEY, hours);
                    applyTimeFilter(hours);
                });
            });
            
            function initialize() {
                const savedTimeFilter = localStorage.getItem(TIME_FILTER_KEY) || DEFAULT_TIME_FILTER;
                const activeFilterButton = document.querySelector(`.controls button[data-hours="${savedTimeFilter}"]`);
                applyTimeFilter(activeFilterButton ? savedTimeFilter : DEFAULT_TIME_FILTER);
            }

            initialize();
        });
    </script>
</body>
</html>